# GK Enterprise Suite - Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration Variables
DB_USER=gcmc_user
DB_PASSWORD=gcmc_password
DB_NAME=gcmc_kaj_db
DB_HOST=localhost
DB_PORT=5432

# Full Database URL (uses variables above)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Settings
BCRYPT_ROUNDS=12
JWT_EXPIRY=7d

# Feature Flags
ENABLE_AUTH=true
ENABLE_REAL_DATA=true
DISABLE_MOCK_DATA=true

# Docker PostgreSQL Settings (used by docker-compose)
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# PgAdmin Settings (optional)
PGADMIN_DEFAULT_EMAIL=admin@gcmc.gy
PGADMIN_DEFAULT_PASSWORD=admin123

# Default User Seeds (CHANGE IN PRODUCTION!)
SEED_ADMIN_EMAIL=admin@gcmc.gy
SEED_ADMIN_PASSWORD=admin123
SEED_GCMC_EMAIL=gcmc@gcmc.gy
SEED_GCMC_PASSWORD=gcmc123
SEED_KAJ_EMAIL=kaj@gcmc.gy
SEED_KAJ_PASSWORD=kaj123
SEED_CLIENT_EMAIL=client@abccorp.gy
SEED_CLIENT_PASSWORD=client123

# Email Configuration (optional)
EMAIL_FROM=noreply@gcmc.gy
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=

# File Upload (optional)
UPLOAD_PROVIDER=local
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# External API Keys (future integrations)
GRA_API_KEY=
NIS_API_KEY=

# Monitoring & Logging
DEBUG=false
LOG_LEVEL=info
SENTRY_DSN=