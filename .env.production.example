# GK Enterprise Suite - Production Environment Configuration
# Copy this file to .env.production for production deployment

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@postgres:5432/gcmc_kaj_db"

# NextAuth.js (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secure-production-secret-key-here-replace-this"
NEXTAUTH_URL="https://your-production-domain.com"

# Application
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"

# Email Configuration (for notifications)
EMAIL_FROM="noreply@gcmc.gy"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# File Upload (AWS S3, Cloudinary, etc.)
UPLOAD_PROVIDER="local" # local, s3, cloudinary
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# External API Keys (for future integrations)
GRA_API_KEY=""
NIS_API_KEY=""

# Security
BCRYPT_ROUNDS="12"
JWT_EXPIRY="7d"

# Monitoring & Logging
DEBUG="false"
LOG_LEVEL="info"
SENTRY_DSN=""

# Database Pool Settings (for production)
DB_POOL_MIN="2"
DB_POOL_MAX="20"
DB_POOL_IDLE_TIMEOUT="30000"